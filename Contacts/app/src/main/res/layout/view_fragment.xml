<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:id="@+id/name_text_view"
        android:hint="Name"
        android:gravity="center"
        android:textColor="#7d7d7d"
        android:text="Nazir Shuqair"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/num_text_view"
        android:layout_alignStart="@+id/num_text_view"
        android:layout_alignRight="@+id/num_text_view"
        android:layout_alignEnd="@+id/num_text_view" />



        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/num_text_view"
            android:hint="Phone Number"
            android:inputType="textPhonetic"
            android:phoneNumber="true"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="#4e4e4e"
            android:text="571-439-6745"
            android:layout_below="@+id/name_text_view"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/email_text_view"
            android:hint="Email Address"
            android:gravity="center_vertical"
            android:layout_below="@+id/num_text_view"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/relation_text_view"
            android:hint="Relationship"
            android:layout_below="@+id/email_text_view"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/message_button"
            android:layout_toRightOf="@+id/call_button"
            android:layout_toEndOf="@+id/call_button"
            android:layout_above="@+id/email_text_view"
            android:layout_alignTop="@+id/num_text_view" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E"
            android:id="@+id/email_button"
            android:layout_alignTop="@+id/email_text_view"
            android:layout_alignRight="@+id/email_text_view"
            android:layout_alignEnd="@+id/email_text_view"
            android:layout_above="@+id/relation_text_view" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/call_button"
            android:layout_toLeftOf="@+id/email_button"
            android:layout_toStartOf="@+id/email_button"
            android:layout_above="@+id/email_text_view"
            android:layout_alignTop="@+id/num_text_view" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="X"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:id="@+id/delete_button"
        android:background="@drawable/deletebutton"
        android:layout_below="@+id/relation_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

</RelativeLayout>