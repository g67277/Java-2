<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:id="@+id/name_text_edit"
        android:hint="Name"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/num_text_edit"
        android:layout_alignEnd="@+id/num_text_edit"
        android:layout_alignLeft="@+id/num_text_edit"
        android:layout_alignStart="@+id/num_text_edit"
        android:textColor="#7d7d7d"
        android:textSize="40sp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/num_text_edit"
        android:hint="Phone Number"
        android:phoneNumber="false"
        android:singleLine="true"
        android:inputType="phone"
        android:layout_below="@+id/name_text_edit"
        android:layout_alignLeft="@+id/email_text_edit"
        android:layout_alignStart="@+id/email_text_edit"
        android:textSize="20sp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/email_text_edit"
        android:hint="Email Address"
        android:layout_below="@+id/num_text_edit"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/relation_text_edit"
        android:hint="Relationship"
        android:layout_below="@+id/email_text_edit"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="20sp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="OK"
        android:textColor="#FFFFFF"
        android:id="@+id/submit_button"
        android:background="@drawable/okbutton"
        android:layout_below="@+id/relation_text_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>