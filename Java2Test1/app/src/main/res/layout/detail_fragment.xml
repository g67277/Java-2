<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="Call Of Duty"
        android:id="@+id/title_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/rating_view"
        android:layout_below="@+id/title_name"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="Descriptions"
        android:id="@+id/descriptions_view"
        android:layout_below="@+id/rating_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/year_view"
        android:layout_below="@+id/title_name"
        android:layout_toRightOf="@+id/rating_view"
        android:layout_toEndOf="@+id/rating_view"
        android:layout_alignBottom="@+id/rating_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star"
        android:id="@+id/star_view"
        android:layout_toEndOf="@+id/year_view"
        android:layout_below="@+id/title_name"
        android:layout_toRightOf="@+id/year_view"
        android:layout_above="@+id/descriptions_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
