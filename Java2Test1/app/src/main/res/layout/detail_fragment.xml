<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.nazirshuqair.java2test1.textViewHelper.AutoResizeTextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Call Of Duty"
        android:id="@+id/title_name"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="70sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:background="#ffff0912" />

    <com.android.nazirshuqair.java2test1.textViewHelper.AutoResizeTextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/rating_view"
        android:gravity="center"
        android:layout_below="@+id/title_name"
        android:textSize="70sp"
        android:textColor="#ffff0912" />

    <com.android.nazirshuqair.java2test1.textViewHelper.AutoResizeTextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="Descriptions"
        android:id="@+id/descriptions_view"
        android:layout_below="@+id/rating_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:layout_marginTop="5dp" />

    <com.android.nazirshuqair.java2test1.textViewHelper.AutoResizeTextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/year_view"
        android:layout_below="@+id/title_name"
        android:layout_toRightOf="@+id/rating_view"
        android:layout_toEndOf="@+id/rating_view"
        android:gravity="center"
        android:layout_alignBottom="@+id/rating_view"
        android:textColor="#ffff0912"
        android:textSize="38sp" />

    <com.android.nazirshuqair.java2test1.textViewHelper.AutoResizeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star"
        android:id="@+id/star_view"
        android:layout_toEndOf="@+id/year_view"
        android:layout_below="@+id/title_name"
        android:layout_toRightOf="@+id/year_view"
        android:layout_above="@+id/descriptions_view"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:textSize="60sp"
        android:textColor="#ffff0912" />


</RelativeLayout>
