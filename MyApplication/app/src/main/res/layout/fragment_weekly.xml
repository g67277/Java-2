<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <EditText
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:id="@+id/cityInput"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="City"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/updateButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/cityInput" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:id="@+id/stateInput"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cityInput"
        android:layout_toEndOf="@+id/cityInput"
        android:hint="State"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/tempLabel"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/cityInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/descLabel"
        android:layout_below="@+id/tempLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
</RelativeLayout>